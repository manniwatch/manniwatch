{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@appnest/readme": "1.2.7",
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.1.1",
    "@rollup/plugin-replace": "2.3.4",
    "@rollup/plugin-typescript": "8.1.1",
    "@types/chai": "4.2.14",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.22",
    "@types/sinon": "9.0.10",
    "chai": "4.2.0",
    "commitizen": "4.2.3",
    "conventional-changelog-angular": "5.0.12",
    "coveralls": "3.1.0",
    "cz-conventional-changelog": "3.3.0",
    "fs-extra": "9.1.0",
    "lerna": "3.22.1",
    "mocha": "8.2.1",
    "nyc": "15.1.0",
    "rollup": "2.38.4",
    "sinon": "9.2.4",
    "ts-node": "9.1.1",
    "tslib": "2.1.0",
    "tslint": "6.1.3",
    "typedoc": "0.20.20",
    "typescript": "4.0.2"
  },
  "scripts": {
    "build": "lerna run build",
    "build:readme": "npx @appnest/readme generate --input readme_blueprint.md --config readme_config.json",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version": "npm run build:readme && git add README.md"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
