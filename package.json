{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/chai": "~4.2.11",
    "@types/mocha": "~7.0.2",
    "@types/node": "~13.9.8",
    "@types/sinon": "~9.0.0",
    "chai": "~4.2.0",
    "commitizen": "^4.0.3",
    "conventional-changelog-angular": "^5.0.6",
    "cz-conventional-changelog": "^3.1.0",
    "lerna": "~3.20.2",
    "mocha": "~7.1.1",
    "nyc": "~15.0.0",
    "sinon": "~9.0.1",
    "ts-node": "~8.8.1",
    "tslint": "~6.1.1",
    "typedoc": "~0.17.3",
    "typescript": "~3.8.3"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version-temp": "npx conventional-changelog --preset eslint --release-count 0 --outfile ./CHANGELOG.md --verbose && npx lerna exec --concurrency 1 --stream -- 'conventional-changelog --preset eslint --release-count 0 --pkg ./package.json --outfile ./CHANGELOG.md --verbose'"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
