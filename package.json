{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@appnest/readme": "1.2.7",
    "@donmahallem/eslint-config": "0.2.10",
    "@donmahallem/rollup-config": "0.4.2",
    "@donmahallem/tslint-config": "0.2.0",
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@rollup/plugin-replace": "3.0.0",
    "@rollup/plugin-typescript": "8.2.5",
    "@types/chai": "4.2.21",
    "@types/mocha": "9.0.0",
    "@types/node": "14.17.14",
    "@types/sinon": "10.0.2",
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "conventional-changelog-angular": "5.0.12",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "fs-extra": "10.0.0",
    "lerna": "4.0.0",
    "mocha": "9.1.1",
    "nyc": "15.1.0",
    "prettier": "2.3.2",
    "rollup": "2.56.3",
    "sinon": "11.1.2",
    "ts-node": "10.2.1",
    "tslib": "2.3.1",
    "tslint": "6.1.3",
    "typedoc": "0.21.9",
    "typescript": "4.3.5"
  },
  "scripts": {
    "build": "lerna run build",
    "prebuild:readme": "node ./scripts/extract_packages.js",
    "postbuild:readme": "node ./scripts/extract_packages.js clear",
    "build:readme": "npx @appnest/readme generate --input readme_blueprint.md --config readme_config_root.json && lerna run build:readme",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version": "npm run build:readme && git add README.md"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
