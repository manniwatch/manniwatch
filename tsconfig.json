{
    "baseUrl": "./src",
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2018"
    },
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "enable": true
    }
}