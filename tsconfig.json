{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES2022",
        "module": "ESNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "bundler",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "lib": [
            "ES2022"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules"
    ]
}
