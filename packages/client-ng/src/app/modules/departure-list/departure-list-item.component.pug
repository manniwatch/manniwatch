a(mat-list-item,[routerLink]="['/passages', departure.tripId]",role="listitem")
    mat-icon(matListIcon,title="{{status}}") {{statusIcon}}
    span.pattern-text(*ngIf="hasDelay",[ngClass]="delayStyle") {{delay}}
    h4(matLine).title {{ departure?.patternText }} {{ departure?.direction }}
    p(matLine).subtitle
        span(title="Planned: {{departure?.plannedTime}}") {{time}}