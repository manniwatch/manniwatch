button(mat-icon-button,(click)="closeSidebar()")
    mat-icon close
mat-list
    h3(matSubheader) Head
    mat-list-item
        mat-icon(matListIcon) home
        h4(matLine) Home
        p(matLine) Home
    mat-list-item
        mat-icon(matListIcon) place
        h4(matLine) Stops
        p(matLine) List of stops
    mat-list-item
        mat-icon(matListIcon) warning
        h4(matLine) No Content yet
        p(matLine) New stuff to come?
    mat-divider
    mat-list-item
        mat-icon(matListIcon) info
        h4(matLine) Version
        p(matLine) {{appVersion}}
    mat-list-item((click)="openGithub()")
        mat-icon(matListIcon) info
        h4(matLine) Github
        p(matLine) The Projects Source Code
    mat-list-item
        mat-icon(matListIcon) info
        h4(matLine) Angular Version
        p(matLine) {{angularVersion}}
.info-box
    span(title="App Version") App: {{appVersion}}
    span(title="Angular Version") Angular: {{angularVersion}}
