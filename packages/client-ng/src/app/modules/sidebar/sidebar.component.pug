button(mat-icon-button,(click)="closeSidebar()")
    mat-icon close
mat-nav-list((click)="closeSidebar()")
    h3(matSubheader) Head
    a(mat-list-item,[routerLink]="['/']",[queryParams]="{utm_source: 'sidebar'}",role="navigation")
        mat-icon(matListIcon) home
        h4(matLine) Home
        p(matLine) Home
    a(mat-list-item,[routerLink]="['/stops']",role="navigation")
        mat-icon(matListIcon) place
        h4(matLine) Stops
        p(matLine) List of stops
    mat-divider
    button(mat-list-item,(click)="checkForUpdate()")
        mat-icon(matListIcon) system_update_alt
        h4(matLine) Check for Update
        p(matLine) Check if an update is available
    a(mat-list-item,[routerLink]="['/settings']",role="navigation")
        mat-icon(latListIcon) settings
        h4(matLine) Settings
        p(matLine) Change Settings
.info-box
    span(title="App Version") App: {{appVersion}}
    span(title="Angular Version") Angular: {{angularVersion}}
